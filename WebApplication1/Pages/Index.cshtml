
@page
@model IndexModel

@using Microsoft.AspNetCore.Identity
@using LiveChat.Models
@inject UserManager<ApplicationUser> UserManager

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <div><param id="userInput" value="@UserManager.GetUserName(User)"/> User @UserManager.GetUserName(User).</div>
            <br />
            Message...<input type="text" id="messageInput" />
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>
<script src="~/lib/signalr/signalr.js"></script>
<script src="~/js/chat.js"></script>
@*<script src="~/js/es5-chat.js"></script>*@
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/searchUser.js"></script>

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-offset-3 col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading c-list">
                    <span class="title">Contacts</span>
                    <ul class="pull-right c-controls">
                        <li><a href="#" class="hide-search" data-command="toggle-search" data-toggle="tooltip" data-placement="top" title="Toggle Search"><i class="fa fa-ellipsis-v"></i></a></li>
                    </ul>
                </div>

                <div class="row" style="display: none;">
                    <div class="col-xs-12">
                        <div class="input-group c-search">
                            <input type="text" class="form-control" id="contact-list-search">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search text-muted"></span></button>
                            </span>
                        </div>
                    </div>
                </div>

                <ul class="list-group" id="contact-list">
                    @foreach (var onlineUser in Model.ChatUsers)
                    {
                        <li class="list-group-item">
                            <div class="col-xs-12 col-sm-3">
                                <img src="https://images.pexels.com/photos/615369/pexels-photo-615369.jpeg?auto=compress&cs=tinysrgb&h=350" alt="Scott Stevens" class="img-responsive img-circle" />
                            </div>
                            <div class="col-xs-12 col-sm-9">
                                <span class="name">@onlineUser.UserName</span><br />
                                <span class="glyphicon glyphicon-map-marker text-muted c-info" data-toggle="tooltip" title="@onlineUser.ConnectionId"></span>
                                <span class="visible-xs"> <span class="text-muted">@onlineUser.ConnectionId</span><br /></span>
                                <span class="glyphicon glyphicon-earphone text-muted c-info" data-toggle="tooltip" title="@onlineUser.ConnectionId"></span>
                                <span class="visible-xs"> <span class="text-muted">@onlineUser.ConnectionId</span><br /></span>
                                <div><a href="~/Chat/StartChat/@onlineUser.UserID"><span class="fa fa-comments text-muted c-info" data-toggle="tooltip" title="@onlineUser.UserID"></span></a></div>
                                <span class="visible-xs"> <span class="text-muted">@onlineUser.UserID</span><br /></span>
                            </div>
                            <div class="clearfix"></div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <!-- JavaScrip Search Plugin -->
    <script src="//rawgithub.com/stidges/jquery-searchable/master/dist/jquery.searchable-1.0.0.min.js"></script>

</div>
